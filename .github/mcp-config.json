{
  "mcpServers": {
    "awesome-copilot": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--network=host",
        "-v", "/workspaces/sax_battery_ha:/workspace:ro",
        "-e", "WORKSPACE_ROOT=/workspace",
        "ghcr.io/microsoft/mcp-dotnet-samples/awesome-copilot:latest"
      ],
      "env": {
        "SAX_PROJECT_ROOT": "/workspace"
      }
    }
  }
}
